<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="styles/style_login.css" />

    <link rel="shortcut icon" type="image/png" href="images/favicon.png">
    <title>TU Login</title>

</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h2 class="tobevanished">Login</h2>

            <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog" role="document">
                    <form action="/login" method="post">
                        <div class="modal-content">
                            <div class="modal-header text-center">
                                <% if(message.length > 0) { %>
                                <div class="alert alert-danger"><%= message %></div>
                                <% } %>
                                <h5 class="modal-title w-100 font-weight-bold" style="display: inline-block;"><span
                                        class="cmpny_name"
                                        style="color:#fff; font-family: 'Alegreya Sans SC'; font-size: 1.7em;">Smart
                                        Maintenance Dashboard</span></h5>
                                <div style="width: 55px; height: 55px; border-radius: 50%; display: inline-block">
                                    <a class="navbar-brand" href=""><img src=" ./images/mainicon.png" width="50"
                                            height="50" alt="" style="border-radius: 50%;">
                                    </a>
                                </div>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body mx-3">
                                <div class="md-form mb-5">
                                    <input type="text" id="defaultForm-email" name="username"
                                        class="form-control username validate">
                                    <label data-error="wrong" data-success="right" for="defaultForm-email">Your
                                        username</label>
                                </div>

                                <div class="md-form mb-4">
                                    <input type="password" name="password" id="defaultForm-pass"
                                        class="form-control password validate">
                                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Your
                                        password</label>
                                </div>

                            </div>
                            <div class="modal-footer d-flex justify-content-center">
                                <button type="submit" class="btn btn-submit btn-primary">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center tobevanished">
                <a href="" class="btn btn-primary btn-launch btn-rounded mb-4" data-toggle="modal"
                    data-target="#modalLoginForm">Launch
                    Modal Login Form</a>
            </div>
        </div>
    </div>
</body>
<script>
    $('.tn-submit').click(function (event) {
        event.preventDefault();
        console.log($('.username').val())
        $.post('/login', { username: $('.username').val(), password: $('.password').val() }, function () { });
    })
    $(document).ready(function () {
        $('.btn-launch').trigger('click')
    })
    $('.tobevanished').css('display', 'none')
    $('#modalLoginForm').modal({
        backdrop: 'static',
        keyboard: false
    })
</script>
<style>
    .modal-header .close {
        display: none;
    }
</style>

</html>